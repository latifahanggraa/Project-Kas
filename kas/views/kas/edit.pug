extends layout
block content
    header(style=' background-color:  #706FD3; color: white; padding: 12px 3px; font-size: 30px;')
        .headertext Edit Data  
    content
        br
        form(action=`/kas/${data.id}?_method=PUT` method="post")
            label Tanggal
                br
                input(type="text" name="tanggal" value=data.tanggal style='width: 20%')
                br
            label Sumber
                br
                input(type="text" name="sumber" value=data.sumber style='width: 20%')
                br
            label Jumlah
                br
                input(type="text" name="jumlah" value=data.jumlah style='width: 20%')
                br
            label Keterangan
                br
                input(type="text" name="keterangan" value=data.keterangan style='width: 20%')
                br
                br
            input(type="submit" value="Simpan" style='background-color:  #2980B9; color: white; border: none; padding:7px 7px;')
            input(type="submit" value="Batal" style='background-color:  #2980B9; color: white; border: none; padding:7px 14px; margin-left: 5px;')